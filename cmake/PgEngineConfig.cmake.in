@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find required system dependencies that consumers need
if(NOT ${CMAKE_SYSTEM_NAME} MATCHES "Emscripten")
    find_dependency(OpenGL REQUIRED)
    # You might also need these system dependencies depending on your setup
    # find_dependency(Threads REQUIRED)
endif()

# Include the targets file - this brings in all the PgEngine:: targets
include("${CMAKE_CURRENT_LIST_DIR}/PgEngineTargets.cmake")

# Provide variables for backward compatibility
set(PgEngine_LIBRARIES PgEngine::PgEngine)

# Set include directories based on the imported target
get_target_property(PgEngine_INCLUDE_DIRS PgEngine::PgEngine INTERFACE_INCLUDE_DIRECTORIES)

# Create an alias for easier consumption if it doesn't exist
if(NOT TARGET PgEngine)
    add_library(PgEngine ALIAS PgEngine::PgEngine)
endif()

# Set found flag
set(PgEngine_FOUND TRUE)

check_required_components(PgEngine)